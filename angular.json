{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "coer91.angular": {
      "projectType": "library",
      "root": "projects/coer91.angular",
      "sourceRoot": "projects/coer91.angular",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr", 
          "configurations": {
            "production": {
              "tsConfig": "./tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "documentation": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/documentation",
      "sourceRoot": "projects/documentation/src/config",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/documentation/src/config/main.ts",
            "tsConfig": "./tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              { "glob": "**/*", "input": "./projects/documentation/public" },
              { "glob": "**/*", "input": "./projects/coer91.angular/images", "output": "/coer91/images" },
              { "glob": "appSettings.js", "input": "./projects/documentation/src/config", "output": "/config" }
            ],
            "styles": [
              "./projects/coer91.angular/styles/index.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["."]
            }
          },
          "configurations": {
            "development": { "optimization": false, "extractLicenses": false, "sourceMap": true },
            "staging": {
              "budgets": [
                { "type": "initial", "maximumWarning": "10mb", "maximumError": "10mb" },
                { "type": "anyComponentStyle", "maximumWarning": "10kb", "maximumError": "10kb" }
              ],
              "fileReplacements": [{
                "replace": "src/config/environments/env.development.ts",
                "with": "src/config/environments/env.staging.ts"
              }],
              "outputHashing": "all"
            },
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "10mb", "maximumError": "10mb" },
                { "type": "anyComponentStyle", "maximumWarning": "10kb", "maximumError": "10kb" }
              ],
              "fileReplacements": [{
                "replace": "src/config/environments/env.development.ts",
                "with": "src/config/environments/env.production.ts"
              }],
              "outputHashing": "all"
            } 
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "development": { "buildTarget": "documentation:build:development" },
            "staging"    : { "buildTarget": "documentation:build:staging"     },
            "production" : { "buildTarget": "documentation:build:production"  }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}